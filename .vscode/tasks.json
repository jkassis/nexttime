{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "tsc",
      "command": "tsc",
      "options": {
        "cwd": "${workspaceFolder}/test"
      },
      // "args": ["${workspaceRoot}/test/node_modules/typescript/bin/tsc"],
      "problemMatcher": ["$tsc"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    }
  ]
}

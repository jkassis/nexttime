{
  "compilerOptions": {
    "declaration": true,
    "incremental": false,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "build",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ESNext",
    "typeRoots": ["node_modules/@types"],
    // "allowJs": true,
    // "watch": true,
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
